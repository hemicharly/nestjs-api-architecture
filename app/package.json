{
  "name": "timesheet-in-transit-api",
  "version": "1.0.2",
  "description": "This project was developed for educational purposes, aiming to explore and deepen knowledge of the **NestJS** framework.\nIt serves as a practical study for the \"adaptation\" of concepts such as **Clean Architecture** and\n**Hexagonal Architecture**, with the goal of promoting the best software design practices, ensuring clear separation of\nresponsibilities, and abstracting external dependencies.",
  "author": "Hemicharly Thiago",
  "private": true,
  "type": "commonjs",
  "license": "UNLICENSED",
  "scripts": {
    "build": "NODE_ENV=production && nest build",
    "generate-index": "node generate-index.js",
    "generate-test-file": "node generate-tests.js",
    "seed": "ts-node -r tsconfig-paths/register src/seed.ts",
    "format": "prettier --check \"{src,test}/**/*.ts\"",
    "format:fix": "prettier --write \"{src,test}/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --watch --debug 0.0.0.0:9229",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test}/**/*.ts\" --cache",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix --cache",
    "test": "jest --config jest.config.ts",
    "test:watch": "jest --watch --config jest.config.ts",
    "test:coverage": "jest --coverage --config jest.config.ts",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "readme:coverage": "node test/readme.coverage.js"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.723.0",
    "@nestjs/axios": "^3.1.3",
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/swagger": "^8.1.0",
    "@nestjs/terminus": "^10.2.3",
    "@nestjs/typeorm": "^10.0.2",
    "axios": "^1.7.9",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.5",
    "dotenv": "^16.4.7",
    "helmet": "^8.0.0",
    "mongodb": "^6.12.0",
    "redoc-express": "^2.1.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20",
    "uuid": "^11.0.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.15",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "badge-maker": "^4.1.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-boundaries": "^5.0.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jest": "^29.7.0",
    "jest-coverage-badges": "^1.1.2",
    "jest-junit": "^16.0.0",
    "jest-runner-groups": "^2.2.0",
    "make-coverage-badge": "^1.2.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "sqlite3": "^5.1.7",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  }
}
